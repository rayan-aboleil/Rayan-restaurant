            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
            background: url('https://image.freepik.com/free-photo/female-chef-holding-salad-bowl_23-2148412398.jpg') no-repeat center center fixed;
            background-size: cover;
            animation: changeBackground 2s infinite;
        }

