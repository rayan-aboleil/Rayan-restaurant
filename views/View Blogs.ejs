}

body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    color: #333;
    animation: changeBackground 15s infinite ease-in-out;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}


          
    

header {
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
    text-align: center;
    padding: 20px 10px;
    position: sticky;
    top: 0;
    z-index: 1000;
    backdrop-filter: blur(5px);
        }

        h1 {
            margin: 0;
            font-size: 3em;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
        }

        .blog-container {
            max-width: 1200px;
            margin: 40px auto;
            display: flex;
            flex-direction: column;
            gap: 20px;
            padding: 0 20px;
        }



.blog-card {
    background-color: rgba(255, 255, 255, 0.6); /* צבע לבן עם שקיפות */
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* צל קליל */
    padding: 20px;
    border: 1px solid rgba(255, 255, 255, 0.3); /* גבול שקוף */
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    backdrop-filter: blur(10px); /* אפקט טשטוש לרקע מתחת */
}

        .blog-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.5);
        }

        .blog-title {
            font-size: 2em;
            color: #ff5733;
            margin-bottom: 10px;
        }

        .blog-meta {
            font-size: 0.9em;
            color: #666;
            margin-bottom: 15px;
        }

        .blog-content {
            font-size: 1.1em;
            line-height: 1.6;
        }

        .btn {
    display: inline-block;
    padding: 15px 30px; /* גודל אחיד לכל הכפתורים */
    font-size: 1.2em;
    font-weight: bold;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    text-align: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

/* צבעים ייחודיים לכפתורי עריכה */
button.edit-section,
.btn.edit {
    background-color: #007bff;
    color: white;
}

button.edit-section:hover,
.btn.edit:hover {
    background-color: #0056b3;
    transform: translateY(-3px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
}

/* צבעים ייחודיים לכפתורי מחיקה */
button.delete-section,
.btn.delete {
    background-color: #e74c3c;
    color: white;
}

button.delete-section:hover,
.btn.delete:hover {
    background-color: #c0392b;
    transform: translateY(-3px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
}

/* התאמה לטפסים */
button.submit-section {
    background-color: #28a745;
    color: white;
}

button.submit-section:hover {
    background-color: #218838;
    transform: translateY(-3px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
}
.back-button {
    display: inline-block;
    padding: 12px 30px;
    font-size: 1.2em;
    font-weight: bold;
    text-decoration: none;
    color: white;
    background-color: #17a2b8; /* צבע טורקיז */
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    text-align: center;
}

.back-button:hover {
    background-color: #138496; /* גוון כהה יותר */
    transform: translateY(-3px); /* תזוזה קלה */
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
}

    </style>
</head>
<body>
    <!-- כותרת ראשית -->
    <header>
        <h1>ברוכים הבאים לבלוגים שלנו</h1>
    </header>

    <!-- אזור הצגת בלוגים -->
    <div class="blog-container">
        <% blogs.forEach(blog => { %>
            <div class="blog-card">
                <!-- כותרת ותוכן הבלוג -->
                <div class="blog-title"><%= blog.title %></div>
                <div class="blog-meta">
                    פורסם על ידי: <strong><%= blog.username %></strong> | תאריך: <%= blog.created_at %>
                </div>
                <div class="blog-content">
                    <%= blog.content %>
                </div>
                <div class="edit-section">
                    <button onclick="toggleForm('edit-form-<%= blog.id %>')">Edit Blog</button>
                    <form id="edit-form-<%= blog.id %>" method="POST" action="/edit-blog" style="display: none;">
                        <input type="text" name="title" value="<%= blog.title %>" placeholder="Enter Title" required>
                        <textarea name="content" rows="5" required><%= blog.content %></textarea>
                        <input type="hidden" name="blogId" value="<%= blog.id %>">
                        <button type="submit">Save Changes</button>
                    </form>
                     
                
                    
                </div>
                <!-- אזור הצגת תגובות -->
                <div class="comments-section">
                    <h3>תגובות:</h3>
                    <% if (blog.replies.length > 0) { %>
                        <% blog.replies.forEach(reply => { %>
                            <div class="comment">
                                <span class="comment-username"><%= reply.username %></span>: 
                                <%= reply.reply_content %>
                            
                                
                            </div>
                        
                            
                        <% }); %>
                    <% } else { %>
                        <p>אין תגובות לפוסט זה.</p>
                    <% } %>
                </div>

              
            </div>
        <% }); %>
        <a href="/index.html" class="back-button">Back to Home</a>
    </div>
    <script>
    function toggleForm(formId) {
        const form = document.getElementById(formId);
        if (form.style.display === 'none' || form.style.display === '') {
            form.style.display = 'block';
        } else {
            form.style.display = 'none';
        }
    }
</script>
